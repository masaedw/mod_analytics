##
##  Makefile -- Build procedure for sample analytics Apache module
##  Autogenerated via ``apxs -n analytics -g''.
##

builddir=.
top_srcdir=/usr/share/httpd
top_builddir=/usr/share/httpd
include /usr/share/httpd/build/special.mk

#   the used tools
APACHECTL=apachectl

#   additional defines, includes and libraries
#DEFS=-Dmy_define=my_value
#INCLUDES=-I/usr/local/include
#SH_LIBS=-L/usr/local/lib -luuid
CXXFLAGS = -std=c++11

CXX = g++

#   the default target
all: local-shared-build

#   install the shared object file into Apache 
install: install-modules-yes

#   cleanup
clean:
	-rm -f mod_analytics.o mod_analytics.lo mod_analytics.slo mod_analytics.la 

#   simple test
test: reload
	lynx -mime_header http://localhost/analytics

#   install and activate shared object by reloading Apache to
#   force a reload of the shared object file
reload: install restart

#   the general Apache start/restart/stop
#   procedures
start:
	$(APACHECTL) start
restart:
	$(APACHECTL) restart
stop:
	$(APACHECTL) stop

